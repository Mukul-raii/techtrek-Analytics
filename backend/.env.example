# Server Configuration
PORT=5000
NODE_ENV=development
# NOTE: In production/serverless (Vercel), NODE_ENV should be 'production' to disable file logging

# Scheduler Configuration
# Set to 'true' to enable automated data ingestion in development
# In production, scheduler is always enabled
ENABLE_SCHEDULER=false

# Azure Cosmos DB Configuration
COSMOS_ENDPOINT=https://your-cosmosdb-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-db-primary-key
COSMOS_DATABASE_NAME=TechPulseDB
COSMOS_CONTAINER_GITHUB=github-data
COSMOS_CONTAINER_HACKERNEWS=hackernews-data
COSMOS_CONTAINER_METADATA=metadata

# Azure SQL Database Configuration
SQL_SERVER=your-server.database.windows.net
SQL_DATABASE=TechPulseAnalytics
SQL_USER=your-admin-username
SQL_PASSWORD=your-secure-password
SQL_ENCRYPT=true
SQL_TRUST_SERVER_CERTIFICATE=false

# Azure Cognitive Search Configuration
SEARCH_ENDPOINT=https://your-search-service.search.windows.net
SEARCH_API_KEY=your-search-admin-key
SEARCH_INDEX_NAME=techpulse-index

# Azure Data Lake Storage Gen2 (Optional)
DATALAKE_ACCOUNT_NAME=your-storage-account
DATALAKE_ACCOUNT_KEY=your-storage-account-key
DATALAKE_CONTAINER_NAME=raw-data

# External APIs
GITHUB_API_URL=https://api.github.com
GITHUB_TOKEN=your-github-personal-access-token
HACKERNEWS_API_URL=https://hacker-news.firebaseio.com/v0

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Data Ingestion Schedule (cron format)
INGESTION_SCHEDULE=0 */6 * * *
